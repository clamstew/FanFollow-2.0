<!-- Polaroid gallery -->
  <style type="text/css">
  @media screen and (max-width: 767px) {
    .polaroids li:nth-child(n+5) {
      display: none;
    }
  }

    ul.polaroids li { display: inline; }

    ul.polaroids a { background: #fff; display: inline; float: left; margin: 0 0 27px 30px; width: auto; padding: 10px 10px 15px; text-align: center; font-family: "Marker Felt", sans-serif; text-decoration: none; color: #333; font-size: 18px; -webkit-box-shadow: 0 3px 6px rgba(0,0,0,.25); -moz-box-shadow: 0 3px 6px rgba(0,0,0,.25); -webkit-transform: rotate(-2deg); -webkit-transition: -webkit-transform .15s linear; -moz-transform: rotate(-2deg);  border-radius:1px;}
    
    ul.polaroids li {
      padding-left: 0;
    }

    @media screen and (max-width: 768px) {
      ul.polaroids li a {
        margin-left: 0;
      } 
    }
    ul.polaroids img { 
/*      width:80%;*/
      /*width:80%;*/
      max-width: 220px;
      max-height: 160px;
      /*position: absolute;*/
      /*clip:rect(100px, 40px, 90px, 30px);*/
      display: block; 
      margin-bottom: 12px;
      border-radius: 5px;
    }
  /*  ul.polaroids a:after { content: attr(title); }*/

    ul.polaroids div { text-align: left; display: inline; }*/


    
    ul.polaroids li:nth-child(even) a { -webkit-transform: rotate(2deg);  -moz-transform: rotate(2deg); }
    ul.polaroids li:nth-child(3n) a { -webkit-transform: none; position: relative; top: -5px;  -moz-transform: none; }
    ul.polaroids li:nth-child(5n) a { -webkit-transform: rotate(5deg); position: relative; right: 5px;  -moz-transform: rotate(5deg); }
    ul.polaroids li:nth-child(8n) a { position: relative; right: 5px; top: 8px; }
    ul.polaroids li:nth-child(11n) a { position: relative; left: -5px; top: 3px; }
    
    ul.polaroids li.messy a {
      margin-top: -400px;
      position: relative;
      left: 160px;
    }
    
    ul.polaroids li a:hover { -webkit-transform: scale(1.25); -moz-transform: scale(1.25); -webkit-box-shadow: 0 3px 6px rgba(0,0,0,.5); -moz-box-shadow: 0 3px 6px rgba(0,0,0,.5); position: relative; z-index: 5; }

    .ride_price {
      color: green;
    }
    .ride_title {
      color: #353535
    }
</style>
<div class="row">
	<div class="large-12 columns" style="overflow: visible">
		<ul class="polaroids large-block-grid-4 small-block-grid-2">
	 
	  <% @rides.each do |ride| %>
    <li>
      <a href="rides/show/<%=ride.id%>" title="<%=ride.title%>">
        <img alt="<%=ride.title%>" src="<%=ride.image%>" />
        <div class="ride_title"><%=ride.title%></div>
        <div class="ride_price">$<%=ride.price_per_seat%></div>
      </a>
    </li>
    <% end %>

   </ul>
 </div>
</div>
<!-- /Polaroid gallery -->
