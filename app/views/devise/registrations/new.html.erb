<div class ="container">
<h2>Sign Up, Snag A Ride & Share In the Groove</h2>
  <div class ="border-form-div"

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :first_name %><br />
          <%= f.text_field :first_name, :autofocus => true, :placeholder => 'First Name' %></div>

          <div><%= f.label :last_name %><br />
          <%= f.text_field :last_name, :autofocus => true, :placeholder => 'Last Name' %></div>

          <div><%= f.label :city %><br />
          <%= f.text_field :city, :autofocus => true, :placeholder => 'City' %></div>

          <div><%= f.label :state %><br />
          <%= f.text_field :state, :autofocus => true, :placeholder => 'State' %></div>

          <div><%= f.label :country %><br />
          <%= f.text_field :country, :autofocus => true, :placeholder => 'Country' %></div>

           <div><%= f.label :image %><br />
          <%= f.text_field :image, :autofocus => true, :placeholder => 'Image' %></div>

      <div><%= f.label :email %><br />
          <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address' %></div>

      <div><%= f.label :password %><br />
      <%= f.password_field :password, :placeholder => 'Password' %></div>

      <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, :placeholder => 'Password' %></div>

      <br>

        <%= render "devise/shared/links" %>

      <div><%= f.submit "Sign up"%></div>

    
      
    <% end %>


  </div>

</div>


