<%= stylesheet_link_tag 'profile-page' %>


<!-- Profile description box -->
    <div class="col-md-7 ">
      <!-- User description box -->
      <div class="description-box shadow">
        <div class="name-box">
          <h4>Hey, I'm <%= current_user.first_name %>!</h4>
        </div>
        <div class="text-content">
          <p>Well, what can I say?! I'm <%=current_user.first_name%> and I live in <%= current_user.city %>. </p>
        </div>
      </div><br/>
      <!-- User rides listing -->
      <div class="rides-box ">
        <div class="text-content">
          <div class="rides-box">
            <h3><i class="fa fa-road"></i> Rides</h3>
            <hr style="margin:8px auto">
            <ul class="cars">
              <% current_user.rides.each do |ride| %>
                <h3><a href="/rides/show/<%=ride.id%>"><%= ride.title %></a></h3>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-md-1 pull-right">
      <!-- Spacing div - there must be a better way! -->
      </div>
    </div>
    <!-- End profile description box -->